# Kconfig for Board Support Package

# Створюємо меню для налаштувань BSP
# menu "My Radio Application Configuration"

#     # Команда 'source' включає вміст іншого Kconfig файлу
#     # Змінна $COMPONENT_DIR вказує на папку 'components'
#     # source "$COMPONENT_DIR/bsp/Kconfig"
    
#     # source "$COMPONENT_DIR/service_ui/Kconfig"
#     # ... і так далі для всіх компонентів з конфігурацією
#     choice BOARD_REVISION
#         prompt "Board Hardware Revision"
#         default BOARD_REVISION_1
#         help
#             Select the specific hardware revision of your board.
#             This will activate the correct BSP implementation and pinout.

#         # Перший варіант вибору
#         config BOARD_REVISION_1
#             bool "Revision 1.0 (Main version)"

#         # Другий варіант вибору
#         config BOARD_REVISION_2
#             bool "Revision 2.1 (Updated display and LED pin)"
        
#         # Можна додати третій, четвертий і т.д.
#         config BOARD_REVISION_3
#             bool "Revision 3.0 (Experimental with Ethernet)"

#     endchoice

#     # Ця опція буде доступна, тільки якщо вибрано Rev 3
#     if BOARD_REVISION_3
#         config ETH_PHY_RST_PIN
#             int "Ethernet PHY Reset Pin"
#             default 5
#             help
#                 GPIO pin number for resetting the Ethernet PHY.
#     endif

# endmenu # My Radio Application Configuration

# Kconfig for UI Service

# menu "User Interface Settings"

#     config ENABLE_UI
#         bool "Enable Graphical User Interface (LVGL)"
#         default y # 'y' - yes, 'n' - no
#         help
#             If enabled, the entire UI service will be compiled and started.
#             Disabling this saves a significant amount of flash and RAM.

#     # Блок `if/endif` показує ці налаштування, тільки якщо UI ввімкнено
#     if ENABLE_UI

#         config UI_THEME_DARK
#             bool "Use Dark Theme"
#             default y
#             help
#                 Selects the default color theme for the UI.

#         config UI_REFRESH_INTERVAL_MS
#             int "UI refresh interval (ms)"
#             default 50
#             range 10 1000
#             help
#                 How often the UI task should process events.

#     endif # ENABLE_UI

# endmenu

